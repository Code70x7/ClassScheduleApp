<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="ClassScheduleApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ClassScheduleApp.Views">

    <!-- Keep it simple; no StaticResource, no flyouts -->
    <TabBar x:Name="Tabs">
        <Tab Title="Terms">
            <ShellContent
                Title="Terms"
                Route="TermsPage"
                ContentTemplate="{DataTemplate views:TermsPage}" />
        </Tab>
        <Tab Title="Search">
            <ShellContent
                Title="Search"
                Route="SearchPage"
                ContentTemplate="{DataTemplate views:SearchPage}" />
        </Tab>
        <Tab Title="Reports">
            <ShellContent
                Title="Reports"
                Route="ReportsPage"
                ContentTemplate="{DataTemplate views:ReportsPage}" />
        </Tab>
    </TabBar>
</Shell>
