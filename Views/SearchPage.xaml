<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ClassScheduleApp.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Search">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="14">

            <!-- Query -->
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                <Entry x:Name="QueryEntry"
                       Placeholder="Search terms, courses, assessments, to-dos…" />
                <Button Grid.Column="1"
                        Text="Go"
                        Clicked="Search_Clicked" />
            </Grid>

            <!-- Empty state (toggled from code-behind) -->
            <Label x:Name="EmptyLabel"
                   IsVisible="False"
                   Text="No results found."
                   TextColor="{DynamicResource SecondaryTextColor}"
                   Margin="0,6,0,0" />

            <!-- Terms -->
            <Label Text="Terms" FontAttributes="Bold" Margin="0,6,0,0"/>
            <CollectionView x:Name="TermsList"
                            SelectionMode="Single"
                            SelectionChanged="Term_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontAttributes="Bold" />
                                <Label FontSize="12">
                                    <Label.Text>
                                        <MultiBinding StringFormat="{}{0:MMM d, yyyy} - {1:MMM d, yyyy}">
                                            <Binding Path="StartDate" />
                                            <Binding Path="EndDate" />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Courses -->
            <Label Text="Courses" FontAttributes="Bold" Margin="0,10,0,0"/>
            <CollectionView x:Name="CoursesList"
                            SelectionMode="Single"
                            SelectionChanged="Course_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontAttributes="Bold" />
                                <Label FontSize="12">
                                    <Label.Text>
                                        <MultiBinding StringFormat="{}{0:MMM d, yyyy} - {1:MMM d, yyyy}">
                                            <Binding Path="StartDate" />
                                            <Binding Path="EndDate" />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Assessments -->
            <Label Text="Assessments" FontAttributes="Bold" Margin="0,10,0,0"/>
            <CollectionView x:Name="AssessmentsList"
                            SelectionMode="Single"
                            SelectionChanged="Assessment_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontAttributes="Bold" />
                                <Label FontSize="12">
                                    <Label.Text>
                                        <MultiBinding StringFormat="{}{0} • {1:MMM d, yyyy} - {2:MMM d, yyyy}">
                                            <Binding Path="Type" />
                                            <Binding Path="StartDate" />
                                            <Binding Path="EndDate" />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- To-Dos -->
            <Label Text="To-Dos" FontAttributes="Bold" Margin="0,10,0,0"/>
            <CollectionView x:Name="TodosList"
                            SelectionMode="Single"
                            SelectionChanged="Todo_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                            <CheckBox IsChecked="{Binding IsCompleted}" />
                            <VerticalStackLayout Grid.Column="1">
                                <!-- If your TodoItem uses a different text property, adjust this binding -->
                                <Label Text="{Binding Title}" />
                                <Label FontSize="12"
                                       Text="{Binding DueDate, StringFormat='Due: {0:MMM d, yyyy}'}" />
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
